{
  "name": "JustKeys",
  "version": "0.1",
  "manifest_version": 2,
  "description": "This plugin allows you to use Chrome without a keyboard.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" },
  "page_action": {
    "default_icon": "icon48.png",
    "default_title": "JustKeys"
  },
  "background": { 
    "page": "background.html"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*"
      ],
      "js" : ["mousetrap.min.js", "contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "permissions": [
    "tabs"
  ]
}

